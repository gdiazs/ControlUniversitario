@model ControlUniversitario.Models.DialogoModelo

<div id="@Model.Id" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="dialogo-mensaje"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn @Model.ClaseBoton btn-action">@Model.TextoBotonAceptar</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/dialogo")