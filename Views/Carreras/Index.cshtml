@using ControlUniversitario.Models

@model CarreraModelo

@{
    ViewBag.Title = "Página Inicio";
}

<div class="row">

    <div class="col-6 offset-3">
        @using (Html.BeginForm("Cursos", "Carreras", new { }, FormMethod.Post, new { @name = "formularioCarrera" }))
        {
            @Html.DropDownList("Carrera", Model.Carreras, new { @class = "form-select" });

        }
    </div>

    <div class="col-6 offset-3 pt-4">
        <table class="table table-hover">
            <thead class="table-primary">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre del curso</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var curso in Model.Cursos)
                {
                    <tr>
                        <th scope="row">1</th>
                        <td>@curso.NombreDelCurso</td>
                        <td><a href="#" class="btn btn-sm btn-danger">Remover</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>

@Scripts.Render("~/bundles/carreras")